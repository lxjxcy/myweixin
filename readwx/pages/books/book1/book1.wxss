/* pages/books/book1/book1.wxss */

/*轮播  */
.swiper-box{
  width:100%;
  height:300rpx;
}
.slide-image{
  width:100%;
  height:100%;
}
.slide-image image{
  width:100%;
  height:100%;
}
/*书籍列表  */
.booktitle{
  font-size: 40rpx;
  line-height: 90rpx;

}
.booktitle::after{
  content: "";
  width:100%;
  height:2rpx;
  background: #000;
  position: absolute;
}
.list-book-top{
  padding:0 10rpx;
}
.list-hot{
  width:100%;
  display: flex;
  flex-direction: row;
  /* justify-content: space-between; */
  flex-wrap:wrap;
  overflow: hidden;
}
.list{
  width:30%;
   height:320rpx;
   margin: 15rpx 10rpx;
   text-align: center;
   border:1rpx solid #ccc;
}
.list text{
  font-size:25rpx;
}
.listimg{
  width:100%;
  height:80%;
}



